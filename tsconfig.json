{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "ES2020", "webworker"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["app/components/*"],
      "@/lib/*": ["lib/*"],
      "@/types/*": ["lib/types/*"],
      "@/utils/*": ["app/utils/*"],
      "@/services/*": ["app/services/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/contexts/*": ["app/contexts/*"],
      "@/config/*": ["app/config/*"]
    },
    "typeRoots": ["./node_modules/@types", "./lib/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "out/types/**/*.ts",
    "lib/types/**/*.ts",
    "supabase/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "backups",
    ".next",
    "out",
    "dist",
    "build",
    ".vercel",
    "EMERGENCY_BACKUP_*",
    "**/*-backup.*",
    "**/*-broken.*",
    "**/*-old.*",
    "**/*_backup.*",
    "**/*_broken.*",
    "**/*_old.*",
    "**/*_corrupted.*",
    "app-production"
  ]
}
